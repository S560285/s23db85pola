extends layout

block content
  h1= title
  - let results = [{elephant_Color:"Black",elephant_height:10,elephant_Weight:2000,elephant_Length:8},{elephant_Color:"white",elephant_height:15,elephant_Weight:2289,elephant_Length:14},{elephant_Color:"red",elephant_height:14,elephant_Weight:1000,elephant_Length:9},{elephant_Color:"brown",elephant_height:16,elephant_Weight:5000,elephant_Length:15}]
  div(class="container-fluid")
    div(class="row")
      each item,index in results
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Color is #{item.elephant_Color}
          p height is #{item.elephant_height}
          p Weight is #{item.elephant_Weight}
          p Length is #{item.elephant_Length}

          //- Bonus details
          //- Bonus Logic
  script.
    function buy(Items) {
      Items = Items+1;
      alert(`You Purchased Item ${Items}`);
    }




    